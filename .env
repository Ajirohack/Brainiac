# CAI Platform Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3000
HOST=localhost
API_VERSION=v1

# Security
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your_encryption_key_here
API_KEY=your_api_key_here

# Database Configuration
# PostgreSQL (Primary Database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cai_platform
DB_USER=cai_user
DB_PASSWORD=your_database_password
DB_SSL=false

# MongoDB
MONGODB_URI=mongodb://localhost:27017/cai_platform
MONGODB_DB_NAME=cai_platform

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring & Observability
## OpenTelemetry Configuration
OTEL_SERVICE_NAME=cai-platform
OTEL_SERVICE_VERSION=1.0.0
OTEL_LOG_LEVEL=info
OTEL_TRACES_SAMPLER=parentbased_always_on
OTEL_TRACES_SAMPLER_ARG=1.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_PROPAGATORS=tracecontext,baggage,b3

## Jaeger Configuration
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6832
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1

## Loki Configuration for Logging
LOKI_ENABLED=true
LOKI_HOST=http://localhost:3100
LOKI_BASIC_AUTH=
LOG_LEVEL=info
LOG_JSON=true
LOG_COLORIZE=true
LOG_TIMESTAMP=true
LOG_HANDLE_EXCEPTIONS=true

## Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9464
METRICS_PATH=/metrics
METRICS_PREFIX=cai_
COLLECT_DEFAULT_METRICS=true
DEFAULT_METRICS_INTERVAL=10000

## Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_PORT=3001
HEALTH_CHECK_HOST=0.0.0.0
HEALTH_CHECK_DETAILS=true
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Neo4j (Knowledge Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# AI/ML Services
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# Vector Database
# FAISS
FAISS_INDEX_PATH=data/embeddings/faiss_index
FAISS_INDEX_TYPE=IndexFlatIP

# Pinecone (Optional)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=cai-knowledge-index

# Chroma
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=cai_knowledge

# External APIs
# Google Search
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Wikipedia
WIKIPEDIA_LANGUAGE=en
WIKIPEDIA_MAX_ARTICLES=100

# Weather API
WEATHER_API_KEY=your_weather_api_key_here

# News API
NEWS_API_KEY=your_news_api_key_here

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
MAX_MEMORY_USAGE=2048
MAX_CPU_USAGE=80

# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=500
QUERY_CACHE_ENABLED=true
RESULT_CACHE_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=50MB
LOG_BACKUP_COUNT=10
STRUCTURED_LOGGING=true

# Monitoring
MONITORING_ENABLED=true
METRICS_COLLECTION_INTERVAL=10
ALERTING_ENABLED=true

# Development Settings
DEBUG_MODE=true
HOT_RELOAD=true
PROFILING_ENABLED=true

# File Upload
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=txt,pdf,docx,md,json,csv
UPLOAD_DIRECTORY=data/uploads

# Security Headers
CORS_ORIGIN=http://localhost:3000
CSP_ENABLED=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3001
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# Background Jobs
JOB_QUEUE_ENABLED=true
JOB_CONCURRENCY=5
JOB_RETRY_ATTEMPTS=3

# Data Processing
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_DOCUMENT_SIZE=50MB
PROCESSING_BATCH_SIZE=10

# Model Paths
MODEL_CACHE_DIR=data/models
EMBEDDING_CACHE_DIR=data/cache/embeddings
KNOWLEDGE_BASE_DIR=data/knowledge_base
DOCUMENT_STORE_DIR=data/documents

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=data/backups